<floating-btn class="floating-btn"></floating-btn>

<div class="dashboard">
    <!-- Header directive as a element  -->
    <body-header></body-header>

    <aside class="main-sidebar" ng-class="teamVm.sidebarstateClass">
        <section class="sidebar" style="height:auto">
            <h3>My Projects</h3>
            <ul class="sidebar-menu" ng-repeat="problem in teamVm.myProblemList">
                <li><a ng-click="teamVm.getProblem(problem)">{{problem.title}}</a></li>
            </ul>
        </section>
    </aside>
    <div class="content-wrapper">
        <div class="body-middle uiScrollableArea">
            <div class="uiScrollableAreaWrap scrollable">
                <div class="uiScrollableAreaBody">

                    <md-content>
                        <md-card>
                            <md-card-content>
                                <div class="row card-content">
                                    <button class="btn btnSubmitIdea btnJoinTeam" ng-style="teamVm.visibilityStyle" ng-click="teamVm.joinTeam()">Join</button>
                                    <div class="col-md-5">
                                        <p class="title" style="font-size: x-large" role="button">{{ teamVm.team.name }}</p>
                                        <p class="date" am-time-ago="team.owner"></p>
                                    </div>
                                </div>
                                <div class="row" style="padding-top: 10px;">

                                    <div class="col-md-12">
                                        <p>
                                            <span class="team-detail-small-title" style="margin-left: 0">Problem:</span> {{teamVm.team.problem.title}}
                                        </p>
                                        <p  style="text-align: justify">
                                            {{ teamVm.team.problem.description }}
                                        </p>
                                    </div>
                                </div>
                                <div class="row" style="height: 20px;"></div>
                                <div class="row">
                                    <p class="team-detail-small-title">Solution</p>
                                    <div class="col-md-10">
                                        <p style="text-align: justify">
                                            {{ teamVm.team.solution_text }}
                                        </p>
                                    </div>
                                </div>


                                <!-- Technologies chips -->
                                <div class="row">
                                    <div class="col-md-10 card-chips">
                                        <p>Technologies:</p>
                                        <md-chips readonly="true" ng-model="teamVm.technologies"></md-chips>
                                    </div>
                                </div>
                                <!-- Tools chips -->
                                <div class="row">
                                    <div class="col-md-10 card-chips" ng-if="teamVm.tools.length">
                                        <p>Tools:</p>
                                        <md-chips readonly="true" ng-model="teamVm.tools"></md-chips>
                                    </div>
                                </div>
                            </md-card-content>

                        </md-card>
                    </md-content>
                    <!-- Comment Box -->
                    <md-content>
                        <md-card>
                            <md-card-content>
                                <textarea id="comment" class="commentBox"  row="10"/>
                                <button class="btn btnSubmitIdea" style="float: right" ng-click="teamVm.comment()">Comment</button>
                            </md-card-content>
                        </md-card>
                    </md-content>
                    <!-- Comments list -->
                    <md-content>
                        <md-card>
                            <md-card-content>

                            </md-card-content>
                        </md-card>
                    </md-content>

                </div>
            </div>
        </div>

    </div>

    <aside class="control-sidebar">
        <ul class="sidebar-menu" ng-if="teamVm.team.members.length">
            <h3>Team Members</h3>
           <li ng-repeat="member in teamVm.team.members"><span>{{member}}</span></li>
        </ul>
    </aside>

</div>