<div class="dashboard">
    <div class="dashboard-header">

    </div>
    <div class="dashboard-body">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="box box-problem">
                    <div class="box-header with-border">
                        <h3 class="box-title">Your team</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="inputTitle" class="col-sm-2 ctrl-label-required">Problem</label>
                                <div class="col-sm-10">
                                    <input type="text" ng-model="teamVm.team.problem" class="form-control" id="inputTitle" placeholder="Problem Title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 ctrl-label-required">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" ng-model="teamVm.team.name" class="form-control" id="inputName" placeholder="Team Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputOwner" class="col-sm-2 ctrl-label-required">Owner</label>
                                <div class="col-sm-10">
                                    <input type="text" ng-model="teamVm.team.owner" class="form-control" id="inputOwner" placeholder="Owner">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputSolution" class="col-sm-2 ctrl-label-required">Solution</label>
                                <div class="col-sm-10">
                                    <textarea id="inputSolution" cols="50" ng-model="teamVm.team.solution_text" rows="6" class="form-control" placeholder="Solution description"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="technologies" class="col-sm-2 ctrl-label">Technologies</label>
                                <md-content class="md-padding chips-container" layout="column">
                                    <md-chips class='problem-chips' ng-model="teamVm.roTechnologies" readonly="teamVm.readonly">
                                        <md-chip-template>
                                            <strong>{{$chip}}</strong>
                                        </md-chip-template>
                                    </md-chips>
                                </md-content>
                            </div>
                            <div class="form-group">
                                <label for="inputGithub" class="col-sm-2 ctrl-label-required">Github Url</label>
                                <div class="col-sm-10">
                                    <input type="text" ng-model="teamVm.team.github_url" class="form-control" id="inputGithub" placeholder="Github url">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="attachment" class="col-sm-2 ctrl-label">Media Attachments</label>
                                <div class="col-sm-10">
                                    <!-- file-model is a directive -->
                                    <input type="file" file-model="teamVm.myFile" class="upload-form-control" id="fileupload" style="display:inline"/>
                                    <input type="submit" class="btnUpload btn btn-default" ng-click="teamVm.uploadMedia()" value="Upload"></input>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-10">
                                    <div ng-show="teamVm.progressVisible">
                                        <div>{{teamVm.progress}}%</div>
                                        <progress value="{{teamVm.progress}}" max="100"></progress>
                                    </div>
                                </div>
                            </div>

                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <button class="btn btnSubmitIdea" ng-disabled="teamVm.submitdisabled" ng-click="teamVm.submitTeam()">Submit</button>
                        </div><!-- /.box-footer -->
                    </form>
                </div><!-- box box-info -->
            </div> <!-- col-md-6 -->
            <div class="col-md-3"></div>
        </div>
    </div><!-- dashboard body -->
</div>