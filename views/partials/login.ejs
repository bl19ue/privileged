<div class="login-box" ng-controller="loginCtrl as ctrl">
    <div class="login-logo">
        <a href="/"><b>Privileged</b><i>4All</i></a>
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">User Login</p>

        <form action="#" method="post">
            <div class="form-group icon-support form-row">
                <div class="item control-label">Email ID</div>
                <input type="email" class="form-control">
                <!--<span class="glyphicon glyphicon-user glyphicon-custom-position"></span>-->
            </div>
            <div class="form-group icon-support form-row">
                <div class="item control-label">Password</div>
                <input type="password" class="form-control">
            </div>
            <div class="signup-footer">
                <input class="btn btn-submit" type="submit" value="Sign In" />
            </div>
        </form>
        <div class="login-box-anchor">
            <a ng-click="showAdvanced($event)">forgot password ?? click here..</a>
            <a>  |  </a>
            <a href="/index#/register">Sign Up</a>
        </div>
    </div>
</div>
