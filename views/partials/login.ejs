

<div class="register-login-container">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <div class="row register-logo">
            <a href="/"><img src="images/logo.png"></a>
        </div>
        <div class="box box-problem" style="border-top: none; margin-top: 6%;">
            <!-- <div class="register-box"> -->
            <div class="register-box-body">
                <p class="register-box-msg">User Login</p>

                <form name="loginForm" ng-submit="loginVm.login()">
                    <div class="form-group icon-support form-row">
                        <div class="item control-label">Email ID</div>
                        <input type="text" class="form-control" ng-model="loginVm.user.email">
                        <!--<span class="glyphicon glyphicon-user glyphicon-custom-position"></span>-->
                    </div>
                    <div class="form-group icon-support form-row">
                        <div class="item control-label">Password</div>
                        <input type="password" class="form-control" ng-model="loginVm.user.password">
                    </div>
                    <div class="signup-footer">
                        <input class="btn btn-submit" type="submit" value="Sign In" />
                    </div>
                </form>

                <div style="text-align: center">
                    <span ng-show="loginVm.isError" style="color: firebrick">Invalid ID or password</span>
                </div>
                <div class="register-box-anchor"><a href="/index#/register">Doesn't have an account? click here</a></div>
            </div>
            <!-- </div> -->
        </div>
    </div>
    <div class="col-md-3"></div>
</div>