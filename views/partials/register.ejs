
<div class="register-login-container">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <div class="row register-logo">
            <a href="/"><img src="images/logo.png"></a>
        </div>
        <div class="box box-problem" style="border-top: none; margin-top: 6%;">
        <!-- <div class="register-box"> -->
            <div class="register-box-body">
                <p class="register-box-msg">Join our community now</p>

                <form name="registerForm" ng-submit="registerVm.registerUser()">
                    <div class="form-group icon-support form-row">
                        <div class="item control-label">your name</div>
                        <input type="text" class="form-control" ng-model="registerVm.user.name">
                        <!--<span class="glyphicon glyphicon-user glyphicon-custom-position"></span>-->
                    </div>
                    <div class="form-group icon-support form-row">
                        <div class="item control-label">your email address</div>
                        <input type="email" class="form-control" ng-model="registerVm.user.email">
                    </div>
                    <div class="form-group icon-support form-row">
                        <div class="item control-label">your password</div>
                        <input type="password" class="form-control" ng-model="registerVm.user.password">
                    </div>
                    <div class="form-group icon-support form-row">
                        <div class="item control-label">confirm password</div>
                        <input type="password" class="form-control">
                    </div>
                    <div class="form-group icon-support form-row">
                        <div class="item control-label">your interests</div>
                        <md-content class="md-padding" layout="column">
                            <md-chips ng-model="registerVm.roInterests" readonly="registerVm.readonly">
                                <md-chip-template>
                                    <strong>{{$chip}}</strong>
                                </md-chip-template>
                            </md-chips>
                        </md-content>
                    </div>

                    <div class="signup-footer">
                        <input class="btn btn-submit" type="submit" value="Join" />
                    </div>
                </form>
                <div class="register-box-anchor"><a href="/index#/login">Already a member? Sign In here</a></div>
            </div>
           <!-- </div> -->
        </div>
    </div>
    <div class="col-md-3"></div>
</div>