<div class="register-box" ng-controller="registerCtrl as ctrl">
    <div class="register-logo">
        <a href="index.ejs"><b>Privileged</b><i>4All</i></a>
    </div>
    <div class="register-box-body">
        <p class="register-box-msg">Join our community now</p>

        <form action="#" method="post">
            <div class="form-group icon-support form-row">
                <div class="item control-label">your name</div>
                <input type="text" class="form-control">
                <!--<span class="glyphicon glyphicon-user glyphicon-custom-position"></span>-->
            </div>
            <div class="form-group icon-support form-row">
                <div class="item control-label">your last name</div>
                <input type="text" class="form-control">
            </div>
            <div class="form-group icon-support form-row">
                <div class="item control-label">your email address</div>
                <input type="text" class="form-control">
            </div>
            <div class="form-group icon-support form-row">
                <div class="item control-label">your interests</div>
                <md-content class="md-padding" layout="column">
                    <md-chips ng-model="ctrl.roInterests" readonly="ctrl.readonly">
                        <md-chip-template>
                            <strong>{{$chip}}</strong>
                        </md-chip-template>
                    </md-chips>
                </md-content>
            </div>

            <div class="signup-footer">
                <input class="btn btn-submit" type="submit" value="Join" />
            </div>
        </form>

    </div>
</div>